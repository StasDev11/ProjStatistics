@using ProjStatistics.Controllers
@model ProjStatistics.Models.ViewModels.StatisticsViewModel
@{
    Layout = "_Layout";
    ViewBag.Title = $"Detailed statistics of the source code ({Model.TargetDirectory})";
}
<h4 class="text-center my-3">@ViewBag.Title</h4>

<table class="table table-striped table-bordered">
    <thead class="bg-light small shadow">
        <tr class="text-center align-top ">
            <th class="col-sm-8">File</th>
            <th class="col-sm-2">Code lines</th>
            <th class="col-sm-2">Size</th>
        </tr>
    </thead>

    <tbody class="small">
        @foreach (var row in Model.TableRows)
        {
            <tr>
                @Html.Raw(row)
            </tr>
        }
    </tbody>
</table>

<div class="d-flex flex-row justify-content-center my-3">
    <a asp-controller="Home" asp-action="@nameof(HomeController.Statistics)" class="btn btn-primary btn-sm shadow">Back</a>
</div>